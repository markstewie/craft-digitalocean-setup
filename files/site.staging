server {
  listen 80;
  listen [::]:80;

  root /var/www/staging.${DOMAIN}/htdocs/current/public_html;
  index index.php index.html index.htm;

  server_name staging.${DOMAIN};

  error_log /var/www/staging.${DOMAIN}/log/error.log warn;
  access_log /var/www/staging.${DOMAIN}/log/access.log combined;

  location / {
    try_files $uri $uri/ =404;
  }
}

